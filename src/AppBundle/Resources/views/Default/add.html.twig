{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('book_add') }}" method="POST" id="book_form">
        {{ form_row(form.title) }}
        {{ form_row(form.date) }}
        {{ form_row(form.author) }}

        {{ form_rest(form) }}
        <input type="submit" value="Send" class="symfony-button-grey" />
    </form>
{% endblock %}
